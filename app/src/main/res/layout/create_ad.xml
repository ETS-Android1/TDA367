<?xml version="1.0" encoding="UTF-8"?>

    <androidx.constraintlayout.widget.ConstraintLayout android:background="#33B4ADFF" android:layout_height="match_parent" android:layout_width="match_parent" android:id="@+id/saveButton" xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android">


    <ScrollView android:layout_height="match_parent" android:layout_width="match_parent">


    <LinearLayout android:layout_height="wrap_content" android:layout_width="match_parent" android:orientation="vertical">


    <LinearLayout android:background="#33B4ADFF" android:layout_height="match_parent" android:layout_width="match_parent" android:id="@+id/linearLayout2" android:orientation="vertical" android:gravity="top">

    <TextView android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/addInfoCar" android:textSize="24dp" android:text="Add information about your car:"/>

    <EditText android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/titleEditText" android:minHeight="48dp" android:inputType="textPersonName" android:hint="Title:" android:ems="10"/>

    <EditText android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/brandEditText" android:minHeight="48dp" android:inputType="textPersonName" android:hint="Brand:" android:ems="10"/>

    <EditText android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/modelEditText" android:minHeight="48dp" android:inputType="textPersonName" android:hint="Model:" android:ems="10"/>

    <EditText android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/yearEditText" android:minHeight="48dp" android:inputType="textPersonName" android:hint="Year:" android:ems="10"/>

    <EditText android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/priceEditText" android:minHeight="48dp" android:inputType="textPersonName" android:hint="Price:" android:ems="10"/>

    <EditText android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/locationEditText" android:minHeight="48dp" android:inputType="textPersonName" android:hint="Location:" android:ems="10"/>

    <Button android:background="@drawable/rounded_button" android:layout_height="50dp" android:layout_width="match_parent" android:id="@+id/uploadImageButton" android:text="UPLOAD IMAGE" android:backgroundTint="#BBF38E" android:layout_marginBottom="32dp" android:layout_marginRight="32dp" android:layout_marginEnd="32dp"/>

    <ImageView android:layout_height="250dp" android:layout_width="359dp" android:id="@+id/carPreview" app:srcCompat="@drawable/bmw_car_img" android:visibility="gone"/>

    <Button android:background="@drawable/rounded_button_cancel" android:layout_height="50dp" android:layout_width="160dp" android:id="@+id/cancelAdButton" android:text="cancel" android:backgroundTint="#FB8B8B" android:layout_marginBottom="32dp" android:layout_marginLeft="32dp" android:layout_marginStart="32dp"/>

    <Button android:background="@drawable/rounded_button" android:layout_height="50dp" android:layout_width="160dp" android:id="@+id/saveAdButton" android:text="Save" android:backgroundTint="#BBF38E" android:layout_marginBottom="32dp" android:layout_marginRight="32dp" android:layout_marginEnd="32dp"/>

</LinearLayout>

</LinearLayout>

</ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>