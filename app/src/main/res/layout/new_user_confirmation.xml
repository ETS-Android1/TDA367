<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="162dp"
        android:background="#33B4ADFF"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="266dp"
            android:layout_margin="15dp"
            android:text="@string/congratulations_on_joining_insert_company_name_see_below_to_get_started_with_renting_out_your_car_or_to_find_a_car_to_rent_best_regards_the_team_att_insert_company_name_making_renting_cars_easy_for_both_parts_since_2021_best_regards_hannes_th_rn_ceo_of_stulb"
            android:textColor="#000000"
            android:textSize="24sp"
            app:autoSizeMaxTextSize="@dimen/activity_horizontal_margin" />

        <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="#BBF38E"
            android:text="@string/click_here_to_list_your_car" />

        <Button
            android:id="@+id/button3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="#BBF38E"
            android:text="@string/click_here_to_find_a_car_to_rent" />

    </LinearLayout>
</ScrollView>